<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import form.*?>

<fx:root type="javafx.scene.layout.GridPane"
	xmlns:fx="http://javafx.com/fxml" styleClass="accountForm,validatedForm">
	
	<VBox styleClass="topBar" GridPane.columnSpan="2">
		<Text styleClass="mainHeader" text="Nouveau compte utilisateur" />
		
	</VBox>

 	<ValidatedUsernameField GridPane.rowIndex="1" GridPane.columnSpan="2" fx:id="fieldUsername"
 		labelText="Nom d'utilisateur" disableButton="#registerSubmitButton"/>
 	
 	<ValidatedEmailField GridPane.rowIndex="2" GridPane.columnSpan="2" fx:id="fieldEmail"
 		labelText="Email" disableButton="#registerSubmitButton"/>
 	
 	<BaseField GridPane.rowIndex="3" fx:id="fieldFirstName"
 		labelText="Prénom"/>

 	<BaseField GridPane.rowIndex="3" GridPane.columnIndex="1" fx:id="fieldLastName"
 		labelText="Nom"/>
 		
 	<BaseField GridPane.rowIndex="4" GridPane.columnSpan="2" fx:id="fieldCity"
 		labelText="Ville"/>

 	<ValidatedPasswordField GridPane.rowIndex="5" GridPane.columnSpan="2" fx:id="fieldPassword"
 		labelText="Mot de passe" disableButton="#registerSubmitButton"/>

  	<ValidatedConfirmPasswordField GridPane.rowIndex="6" GridPane.columnSpan="2" fx:id="fieldConfirmPassword"
 		labelText="Confirmez le mot de passe" fieldToMatch="#fieldPassword" disableButton="#registerSubmitButton"/>
 
    <HBox GridPane.rowIndex="7" GridPane.columnSpan="2" alignment="top_right" >
        <Button fx:id="registerConnectButton" text="J'ai déja un compte" onAction="#handleConnectButtonAction"/>
        <Button fx:id="registerSubmitButton" text="Créer un compte" onAction="#handleSubmitButtonAction" disable="true"/>
    </HBox>
</fx:root>